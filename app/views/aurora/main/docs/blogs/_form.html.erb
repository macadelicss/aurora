<div class="pt-20"></div>
<%= form_with(model: aurora_main_docs_blog, class: "contents") do |form| %>
  <% if aurora_main_docs_blog.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(aurora_main_docs_blog.errors.count, "error") %> prohibited this aurora_main_docs_blog from being saved:</h2>

      <ul>
        <% aurora_main_docs_blog.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "text-black block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :author %>
    <%= form.text_field :author, class: "text-black block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 4, class: "text-black block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :image_urls %>
    <%= form.file_field :image_urls, class: "text-black bg-white block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :published %>
    <%= form.check_box :published, class: "text-black block mt-2 h-5 w-5" %>
  </div>

  <div class="inline">
    <%= form.submit class: "text-black rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>


